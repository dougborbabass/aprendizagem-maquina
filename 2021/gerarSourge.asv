function sourge = gerarSourge(type)

% https://www.pscad.com/webhelp/Master_Library_Models/CSMF/Surge_Generators/Wavelet_Transformation_(WT).htm

t = 0:0.4:76;
a1 = 0.0145;
b1 = 2.8353;
k1 = 1.037;

a2 = 0.1732;
b2 = 0.0866;
k2 = 4;

if type == 1
    sourge = 1000*k1*(exp(-a1*t)-exp(-b1*t));
else
    sourge = -1*1000*k2*(exp(-a2*t)-exp(-b2*t));
end


% adiciona a classe do sinal
sourge(length(sourge)+) = 5;

end